@model CarShop.BL.ViewModel.EditCarViewModel
@{ 
      Layout = "~/Views/Shared/_UserLayout.cshtml";
}

    <form asp-action="CreateCar" asp-controller="Car" method="post" enctype="multipart/form-data">

        <div>
            <h2>Назва машини</h2>
            <input type="text" name="Name" />
        </div>

        <div>
            <h2>Назва машини</h2>
            <textarea name="Text" ></textarea>
        </div>
        <div>
            <select name="CategoryId">
                @foreach (var item in Model.Categories)
                {
                    <option value="@item.Id">@item.Name</option>
                }

            </select>
        </div>
        <div>
            <h2>Вага машини</h2>
            <input type="number" name="Weight" />
        </div>


        <div>
            <h2>Колір машини</h2>
            <input type="number" name="Color" />
        </div>

        <div>
            <h2>Висота машини</h2>
            <input type="number" name="Height" />
        </div>
        <div>
            <h2>Ширина машини</h2>
            <input type="number" name="Width" />
        </div>
        <div>
            <h2>Назва двигуна</h2>
            <input type="text" asp-for="Engine.Name" />
        </div>
        <div>
            <h2>Кіньські сили</h2>
            <input type="number" asp-for="Engine.Horsepower" />
        </div>
        <div>
            <h2>Ціна</h2>
            <input type="number" name="Price" />
        </div>

        <div>
            <h2>Виберіть картинку</h2>
            <input type="file" name="formFile" />
        </div>
        <div>
            <h2>Виберіть картинку</h2>
            <input type="file" name="formFile1" />
        </div>

        <div>
            <input type="submit" />
        </div>
    </form>