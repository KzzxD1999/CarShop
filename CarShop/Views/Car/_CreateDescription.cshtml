@{
}

    <form asp-action="CreateDescription" asp-controller="Car" method="post" enctype="multipart/form-data">
        <input hidden asp-for="Description.CarId" value="@Model.Car.Id" />
        <div asp-validation-summary="ModelOnly"></div>
        <div id="error"></div>
        <div>
            <h4>Name</h4>
            <input id="name" asp-for="Description.Name" />
        </div>
        <div>
            <h4>Text</h4>
            <input id="text" asp-for="Description.Text" />
        </div>
        <div>
            <h4>IsShown</h4>
            <input id="isShown" asp-for="Description.IsShown" />
        </div>
        <div>
            <h4>Img</h4>
            <input  type="file" name="img" />
        </div>
        <div>
            <button type="submit" >Готово</button>
        </div>
    </form>




