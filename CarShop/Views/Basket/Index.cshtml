@model CarShop.BL.ViewModel.UserBasketViewModel



@if (Model.Cars.Count() <= 0)
{
    <h1>Корзина пуста</h1>
}
else
{
    foreach (var item in Model.Cars)
    {
        <h2>@item.Name</h2>
        <h3>Price: @item.Price</h3>

        foreach (var item1 in Model.BasketCar.Where(x => x.CarId == item.Id))
        {
            // <h3>@item1</h3>
            <h3>@item1.Count</h3>
            <h4>@item1.PriceSum</h4>
        }

        <a asp-action="DeleteCarFromBasket" asp-controller="Basket" asp-route-id="@item.Id">Видалити</a>
        <a asp-action="EditCarInBasket" asp-controller="Basket" asp-route-id="@item.Id">Редагувати</a>

    }
}

